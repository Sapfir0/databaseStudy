<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_main">
	<TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
        android:id="@+id/upperList"/>
	<LinearLayout
        android:orientation="vertical"
        android:weightSum="10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
        android:minWidth="25px"
        android:minHeight="25px">
		<RelativeLayout
            android:layout_weight="2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="25px"
            android:minHeight="25px"
            android:id="@+id/relativeLayout1">
			<LinearLayout
                android:orientation="horizontal"
                android:minWidth="25px"
                android:minHeight="25px"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/linearLayout1">
				<TextView
                    android:text="Из города"
                    android:textSize="24sp"
                    android:textColor="@android:color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
                    android:id="@+id/textView1" 
            />
				<EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
                    android:id="@+id/sourceCity"
                    android:enabled="false"/>
			</LinearLayout>
		</RelativeLayout>
		<RelativeLayout
            android:layout_weight="2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="25px"
            android:minHeight="25px"
            android:id="@+id/relativeLayout1">
			<LinearLayout
                android:orientation="horizontal"
                android:minWidth="25px"
                android:minHeight="25px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
                android:id="@+id/linearLayout1">
				<TextView
                    android:text="В город"
                    android:textSize="24sp"
                    android:textColor="@android:color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
                    android:id="@+id/textView1" 
            />
				<EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
                    android:id="@+id/destinationCity"
                    android:enabled="false"/>
			</LinearLayout>
		</RelativeLayout>
		<RelativeLayout
            android:layout_weight="2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="25px"
            android:minHeight="25px"
            android:id="@+id/relativeLayout1">
			<LinearLayout
                android:orientation="horizontal"
                android:minWidth="25px"
                android:minHeight="25px"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/linearLayout1">
				<TextView
                android:id="@+id/arrivalDateTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                    android:text="Дата/время отправления"/>
            />
				<Button
                android:id="@+id/setArrivalDateTimeButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Изменить"
                android:onClick="setTime" />
			</LinearLayout>
		</RelativeLayout>
		<RelativeLayout
            android:layout_weight="2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="25px"
            android:minHeight="25px"
            android:id="@+id/relativeLayout1">
			<LinearLayout
                android:orientation="horizontal"
                android:minWidth="25px"
                android:minHeight="25px"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/linearLayout1">
				<TextView
                android:id="@+id/destinationDateTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                    android:text="Дата/время прибытия"/>
            />
				<Button
                android:id="@+id/setDestinationDateTimeButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
                android:text="Изменить"
                android:onClick="setDate"  />
			</LinearLayout>
		</RelativeLayout>
		
		
	</LinearLayout>
</RelativeLayout>